<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="stu" class="com.joshua.spring.Student">
      <property name="name" value="Alex"></property>
      <property name="age" value="10"></property>
      <property name="school" ref="school"></property>
  </bean>

   <bean id="school" class="com.joshua.spring2.School">
       <property name="name" value="武汉大学"></property>
        <property name="address" value="武汉"></property>
   </bean>
</beans>